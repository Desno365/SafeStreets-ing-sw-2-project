<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Warning theme for button. -->
    <style name="ButtonWarning" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/holo_red_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem"></style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textAppearanceListItem"></item>
    </style>
</resources>
